---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import TeamMember from '~/components/widgets/TeamMember.astro';

// Import team member data
import {
  claudiuPrecup,
  valentinaSandu,
  andreeaLauraBeian,
  virginiaNeacsu,
  flaviusEmilian,
  simonaMuller,
  ioanaOltean,
} from '~/data/team';

// Import all team images
import prClaudiuPrecupImg from '~/assets/images/echipa/pr-claudiu-precup.jpg';
import valentinaSanduImg from '~/assets/images/echipa/valentina-sandu.jpg';
import andreeaLauraBeianImg from '~/assets/images/echipa/andreea-laura-beian.jpg';
import virginiaNeacsuImg from '~/assets/images/echipa/virginia-neacsu.jpg';
import flaviusEmilianImg from '~/assets/images/echipa/flavius-emilian.jpg';
import simonaMullerImg from '~/assets/images/echipa/simona-muller.jpg';
import ioanaOlteanImg from '~/assets/images/echipa/ioana-oltean.jpg';

const metadata = {
  title: 'Echipa noastră - Grădinița Teofil',
  description: 'Cunoașteți echipa de educatori Montessori dedicați din Grădinița Teofil.',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Grădiniță" title="Echipa noastră" subtitle="Educatori Montessori dedicați și pasionați" />

  <!-- Team Grid Section -->
  <section class="px-4 py-16 sm:px-6 mx-auto lg:px-8 lg:py-20 max-w-7xl">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <!-- Team Member 1: Claudiu Precup -->
      <TeamMember
        id={claudiuPrecup.id}
        title={claudiuPrecup.title}
        tagline={claudiuPrecup.tagline}
        image={prClaudiuPrecupImg}
      >
        <Fragment set:html={claudiuPrecup.content} />
      </TeamMember>

      <!-- Team Member 2: dr. Valentina Sandu -->
      <TeamMember
        id={valentinaSandu.id}
        title={valentinaSandu.title}
        tagline={valentinaSandu.tagline}
        image={valentinaSanduImg}
      >
        <Fragment set:html={valentinaSandu.content} />
      </TeamMember>

      <!-- Team Member 3: Virginia Neacșu -->
      <TeamMember
        id={virginiaNeacsu.id}
        title={virginiaNeacsu.title}
        tagline={virginiaNeacsu.tagline}
        image={virginiaNeacsuImg}
      >
        <Fragment set:html={virginiaNeacsu.content} />
      </TeamMember>

      <!-- Team Member 4: Andreea Laura Beian -->
      <TeamMember
        id={andreeaLauraBeian.id}
        title={andreeaLauraBeian.title}
        tagline={andreeaLauraBeian.tagline}
        image={andreeaLauraBeianImg}
      >
        <Fragment set:html={andreeaLauraBeian.content} />
      </TeamMember>

      <!-- Team Member 5: Ioana Oltean -->
      <TeamMember id={ioanaOltean.id} title={ioanaOltean.title} tagline={ioanaOltean.tagline} image={ioanaOlteanImg}>
        <Fragment set:html={ioanaOltean.content} />
      </TeamMember>

      <!-- Team Member 6: Flavius Emilian -->
      <TeamMember
        id={flaviusEmilian.id}
        title={flaviusEmilian.title}
        tagline={flaviusEmilian.tagline}
        image={flaviusEmilianImg}
      >
        <Fragment set:html={flaviusEmilian.content} />
      </TeamMember>

      <!-- Team Member 7: Simona Muller -->
      <TeamMember
        id={simonaMuller.id}
        title={simonaMuller.title}
        tagline={simonaMuller.tagline}
        image={simonaMullerImg}
      >
        <Fragment set:html={simonaMuller.content} />
      </TeamMember>
    </div>
  </section>
</Layout>
