---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Grădiniță - Școala Teofil',
  description: 'Grădinița Teofil - educație Montessori de calitate pentru copiii dumneavoastră.',
};
---

<Layout metadata={metadata}>
  <HeroText
    tagline="Grădiniță"
    title="Grădinița Teofil"
    subtitle="Grădiniță cu metodă de predare Montessori - unde copiii învață prin explorare și descoperire într-un mediu pregătit cu grijă."
  />

  <Features2
    title="Descoperă mai multe despre Grădinița Teofil"
    subtitle=""
    columns={3}
    items={[
      {
        title: 'Metoda pedagogică',
        description:
          'Descoperă principiile metodei Montessori și cum le aplicăm în grădiniță pentru dezvoltarea armonioasă a copiilor.',
        icon: 'tabler:book-2',
        callToAction: {
          text: 'Citește mai mult',
          href: '/gradinita/metoda-pedagogica',
        },
      },
      {
        title: 'Echipa noastră',
        description:
          'Cunoaște echipa de educatori Montessori dedicați care lucrează cu pasiune pentru dezvoltarea copiilor.',
        icon: 'tabler:users',
        callToAction: {
          text: 'Cunoaște echipa',
          href: '/gradinita/echipa-noastra',
        },
      },
      {
        title: 'Noutăți',
        description: 'Ultimele știri, evenimente și activități din Grădinița Teofil.',
        icon: 'tabler:news',
        callToAction: {
          text: 'Vezi noutățile',
          href: '/gradinita/noutati',
        },
      },
      {
        title: 'Galerie foto',
        description: 'Momente speciale din viața grădiniței - activități, evenimente și zâmbetele copiilor noștri.',
        icon: 'tabler:photo',
        callToAction: {
          text: 'Vezi galeria',
          href: '/gradinita/galerie-foto',
        },
      },
      {
        title: 'Înscrieri',
        description: 'Informații despre procesul de înscriere, locuri disponibile, documente necesare și etape.',
        icon: 'tabler:clipboard-check',
        callToAction: {
          text: 'Informații înscrieri',
          href: '/gradinita/inscrieri',
        },
      },
      {
        title: 'Informații utile (Q&A)',
        description: 'Răspunsuri la întrebările frecvente despre grădiniță, program, activități și servicii.',
        icon: 'tabler:help',
        callToAction: {
          text: 'Vezi întrebări frecvente',
          href: '/gradinita/informatii-utile',
        },
      },
    ]}
  />
</Layout>
