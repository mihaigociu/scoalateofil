---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ImageCards from '~/components/widgets/ImageCards.astro';

const metadata = {
  title: 'Activități și Media - Școala Teofil',
  description: 'Activități extracurriculare, revista școlii, emisiuni și clubul de cercetași de la Școala Teofil.',
};
---

<Layout metadata={metadata}>
  <HeroText
    title="Activități și Media"
    subtitle="Descoperiți activitățile extracurriculare, proiectele media și viața școlară de la Școala Teofil."
  />

  <ImageCards
    title="Explorați activitățile noastre"
    subtitle=""
    columns={2}
    cards={[
      {
        title: 'Revista școlii',
        description:
          'Revista Școala Teofil - articole, creații și știri din viața școlară scrise de elevi și profesori.',
        image: {
          src: '~/assets/images/cards/activitati/revista-scolii.jpg',
          alt: 'Revista școlii',
        },
        callToAction: {
          text: 'Aflați mai mult',
          href: '/activitati/revista-scolii',
        },
      },
      {
        title: 'Clubul de cercetași',
        description: 'Clubul de cercetași Teofil - aventuri în natură, tabere și activități de dezvoltare personală.',
        image: {
          src: '~/assets/images/cards/activitati/clubul-de-cercetasi.jpg',
          alt: 'Clubul de cercetași',
        },
        callToAction: {
          text: 'Aflați mai mult',
          href: '/activitati/clubul-de-cercetasi',
        },
      },
    ]}
  />
</Layout>
