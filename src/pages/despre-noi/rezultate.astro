---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ExpandableCards from '~/components/widgets/ExpandableCards.astro';

const metadata = {
  title: 'Rezultate - Școala Teofil',
  description: 'Realizările și succesele elevilor Școlii Teofil în diverse competiții și activități educaționale.',
};
---

<Layout metadata={metadata}>
  <HeroText title="Rezultate" subtitle="Mândri de realizările elevilor noștri" />

  <ExpandableCards
    cards={[
      {
        title: 'Rezultate academice',
        image: {
          src: '~/assets/images/rezultate.jpg',
          alt: 'Rezultate academice',
        },
        summary: 'Elevii Școlii Teofil se remarcă constant prin performanțe deosebite în domeniul academic.',
        content: `
          <p class="mb-4">
            Aici vom adăuga rezultatele academice ale elevilor noștri.
          </p>
        `,
      },
      {
        title: 'Competiții și concursuri',
        image: {
          src: '~/assets/images/competitii.jpg',
          alt: 'Competiții și concursuri',
        },
        summary: 'Participarea activă a elevilor la competiții locale, naționale și internaționale.',
        content: `
          <p class="mb-4">
            Aici vom adăuga rezultatele obținute de elevii noștri la diverse competiții și concursuri.
          </p>
        `,
      },
      {
        title: 'Proiecte educaționale',
        image: {
          src: '~/assets/images/proiecte.jpg',
          alt: 'Proiecte educaționale',
        },
        summary: 'Proiecte și inițiative prin care elevii își dezvoltă competențe practice și creativitatea.',
        content: `
          <p class="mb-4">
            Aici vom adăuga detalii despre proiectele educaționale la care participă elevii noștri.
          </p>
        `,
      },
      {
        title: 'Activități extracurriculare',
        image: {
          src: '~/assets/images/extracurriculare.jpg',
          alt: 'Activități extracurriculare',
        },
        summary: 'Realizări în domeniul artelor, sportului și altor activități extracurriculare.',
        content: `
          <p class="mb-4">
            Aici vom adăuga realizările elevilor în activități extracurriculare.
          </p>
        `,
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </ExpandableCards>
</Layout>
