---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Content from '~/components/widgets/Content.astro';

const metadata = {
  title: 'Revista școlii - Școala Teofil',
  description: 'Publicația Școlii Teofil cu articole scrise de elevi, profesori și părinți.',
};
---

<Layout metadata={metadata}>
  <HeroText title="Revista școlii" subtitle="Vocea comunității noastre" />

  <Content
    isReversed
    title="Publicația noastră"
    image={{
      src: '~/assets/images/revista.jpg',
      alt: 'Revista școlii',
    }}
  >
    <Fragment slot="content">
      <p class="mb-4">
        Revista Școlii Teofil este o platformă de exprimare pentru toți membrii comunității noastre - elevi, profesori
        și părinți.
      </p>
      <p class="mb-4">
        Aici găsiți articole despre experiențele școlare, realizări, proiecte, povești creative și multe altele.
      </p>

      <h3 class="text-xl font-bold mb-3 mt-6">Contribuții</h3>
      <p class="mb-4">Încurajăm toți elevii să contribuie cu articole, poezii, desene și alte materiale creative.</p>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>
</Layout>
