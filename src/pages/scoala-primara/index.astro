---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ImageCards from '~/components/widgets/ImageCards.astro';

const metadata = {
  title: 'Școala Primară - Școala Teofil',
  description: 'Școala Primară Teofil - educație de calitate pentru clasele 0-IV.',
};
---

<Layout metadata={metadata}>
  <HeroText
    title="Școala Primară Teofil"
    subtitle="Educație de calitate pentru clasele 0-IV, bazată pe respect, curiozitate și dezvoltare armonioasă."
  />

  <ImageCards
    title="Descoperiți mai multe despre Școala Primară Teofil"
    subtitle=""
    columns={3}
    cards={[
      {
        title: 'Metoda pedagogică',
        description:
          'Descoperiți abordarea noastră educațională care combină excelența academică cu dezvoltarea personală a elevilor.',
        image: {
          src: '~/assets/images/cards/scoala-primara/metoda-pedagogica.jpg',
          alt: 'Metoda pedagogică',
        },
        callToAction: {
          text: 'Citiți mai mult',
          href: '/scoala-primara/metoda-pedagogica',
        },
      },
      {
        title: 'Echipa noastră',
        description:
          'Cunoașteți echipa de învățători și profesori dedicați care lucrează cu pasiune pentru educația copiilor.',
        image: {
          src: '~/assets/images/cards/scoala-primara/echipa-noastra.jpg',
          alt: 'Echipa noastră',
        },
        callToAction: {
          text: 'Cunoașteți echipa',
          href: '/scoala-primara/echipa-noastra',
        },
      },
      {
        title: 'Galerie foto',
        description: 'Momente speciale din viața școlii - activități, evenimente și realizările elevilor noștri.',
        image: {
          src: '~/assets/images/cards/scoala-primara/galerie-foto.jpg',
          alt: 'Galerie foto',
        },
        callToAction: {
          text: 'Vedeți galeria',
          href: '/scoala-primara/galerie-foto',
        },
      },
      {
        title: 'Înscrieri',
        description: 'Informații despre procesul de înscriere, locuri disponibile, documente necesare și etape.',
        image: {
          src: '~/assets/images/cards/scoala-primara/inscrieri.jpg',
          alt: 'Înscrieri',
        },
        callToAction: {
          text: 'Informații înscrieri',
          href: '/scoala-primara/inscrieri',
        },
      },
      {
        title: 'Informații utile (Q&A)',
        description: 'Răspunsuri la întrebările frecvente despre școala primară, program, activități și servicii.',
        image: {
          src: '~/assets/images/cards/scoala-primara/informatii-utile.jpg',
          alt: 'Informații utile',
        },
        callToAction: {
          text: 'Vedeți întrebări frecvente',
          href: '/scoala-primara/informatii-utile',
        },
      },
    ]}
  />
</Layout>
