---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import TeamMember from '~/components/widgets/TeamMember.astro';

// Import team member data
import { cristinaBarsan, bogdanHerteg, elizaPurcaru, tatianaOnilov, alexandraIoica, rominaSopoian } from '~/data/team';

// Import all team images
import cristinaBarsanImg from '~/assets/images/echipa/cristina-barsan.jpg';
import bogdanHertegImg from '~/assets/images/echipa/bogdan-herteg.jpg';
import elizaPurcaruImg from '~/assets/images/echipa/eliza-purcaru.jpg';
import tatianaOnilovImg from '~/assets/images/echipa/tatiana-onilov.jpg';
import alexandraIoicaImg from '~/assets/images/echipa/alexandra-ioica.jpg';
import rominaSopoianImg from '~/assets/images/echipa/romina-sopoian.jpg';

const metadata = {
  title: 'Echipa noastră - Școala Primară Teofil',
  description: 'Cunoașteți echipa de învățători și profesori dedicați din Școala Primară Teofil.',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Școala Primară" title="Echipa noastră" subtitle="Învățători și profesori dedicați și pasionați" />

  <!-- Team Grid Section -->
  <section class="px-4 py-16 sm:px-6 mx-auto lg:px-8 lg:py-20 max-w-7xl">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <!-- Team Member 1: Cristina Bârsan -->
      <TeamMember
        id={cristinaBarsan.id}
        title={cristinaBarsan.title}
        tagline={cristinaBarsan.tagline}
        image={cristinaBarsanImg}
      >
        <Fragment set:html={cristinaBarsan.content} />
      </TeamMember>

      <!-- Team Member 2: Bogdan Herțeg -->
      <TeamMember
        id={bogdanHerteg.id}
        title={bogdanHerteg.title}
        tagline={bogdanHerteg.tagline}
        image={bogdanHertegImg}
      >
        <Fragment set:html={bogdanHerteg.content} />
      </TeamMember>

      <!-- Team Member 3: Eliza Purcaru -->
      <TeamMember
        id={elizaPurcaru.id}
        title={elizaPurcaru.title}
        tagline={elizaPurcaru.tagline}
        image={elizaPurcaruImg}
      >
        <Fragment set:html={elizaPurcaru.content} />
      </TeamMember>

      <!-- Team Member 4: Tatiana Onilov -->
      <TeamMember
        id={tatianaOnilov.id}
        title={tatianaOnilov.title}
        tagline={tatianaOnilov.tagline}
        image={tatianaOnilovImg}
      >
        <Fragment set:html={tatianaOnilov.content} />
      </TeamMember>

      <!-- Team Member 5: Alexandra Ioica -->
      <TeamMember
        id={alexandraIoica.id}
        title={alexandraIoica.title}
        tagline={alexandraIoica.tagline}
        image={alexandraIoicaImg}
      >
        <Fragment set:html={alexandraIoica.content} />
      </TeamMember>

      <!-- Team Member 6: Romina Sopoian -->
      <TeamMember
        id={rominaSopoian.id}
        title={rominaSopoian.title}
        tagline={rominaSopoian.tagline}
        image={rominaSopoianImg}
      >
        <Fragment set:html={rominaSopoian.content} />
      </TeamMember>
    </div>
  </section>
</Layout>
