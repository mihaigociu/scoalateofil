---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ExpandableCards from '~/components/widgets/ExpandableCards.astro';

const metadata = {
  title: 'Înscrieri - Școala Primară Teofil',
  description: 'Informații despre înscrierile la Școala Primară Teofil - procedură, documente, calendar.',
};
---

<Layout metadata={metadata}>
  <HeroText
    tagline="Școala Primară"
    title="Înscrieri"
    subtitle="Informații despre procesul de înscriere la Școala Primară Teofil"
  />

  <ExpandableCards
    cards={[
      {
        title: 'Înscriere la Școala Primară',
        image: {
          src: '~/assets/images/inscriere-primara.jpg',
          alt: 'Înscriere la Școala Primară',
        },
        summary: 'Pentru informații despre înscriere și disponibilitatea locurilor, vă rugăm să ne contactați.',
        content: `
          <p class="mb-4">
            Școala Primară Teofil oferă educație pentru clasele 0 (pregătitoare) până la clasa a IV-a.
          </p>
          
          <p class="mb-4">
            Pentru informații detaliate despre procesul de înscriere, disponibilitatea locurilor și toate detaliile necesare, vă rugăm să <strong>contactați școala</strong> direct.
          </p>
          
          <h4 class="text-xl font-bold mb-3">Cum ne puteți contacta</h4>
          <ul class="list-disc list-inside mb-4 space-y-2">
            <li>Telefon: 0723 537 819</li>
            <li>Email: scoalateofil@gmail.com</li>
            <li>Programare vizită la sediul școlii</li>
          </ul>
          
          <p class="mb-4">
            Echipa noastră vă va oferi toate informațiile necesare și vă va ghida prin procesul de înscriere.
          </p>
        `,
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </ExpandableCards>
</Layout>
