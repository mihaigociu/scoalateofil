---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ImageCards from '~/components/widgets/ImageCards.astro';

const metadata = {
  title: 'Școala Gimnazială - Școala Teofil',
  description: 'Școala Gimnazială Teofil - educație de calitate pentru clasele V-VIII.',
};
---

<Layout metadata={metadata}>
  <HeroText
    title="Școala Gimnazială Teofil"
    subtitle="Educație de calitate pentru clasele V-VIII, pregătind elevii pentru succes academic și dezvoltare personală."
  />

  <ImageCards
    title="Descoperiți mai multe despre Școala Gimnazială Teofil"
    columns={3}
    cards={[
      {
        title: 'Metoda pedagogică',
        description:
          'Descoperiți abordarea noastră educațională care pregătește elevii pentru provocările gimnaziului și ale vieții.',
        image: {
          src: '~/assets/images/cards/scoala-gimnaziala/metoda-pedagogica.jpg',
          alt: 'Metoda pedagogică',
        },
        callToAction: {
          text: 'Citiți mai mult',
          href: '/scoala-gimnaziala/metoda-pedagogica',
        },
      },
      {
        title: 'Echipa noastră',
        description: 'Cunoașteți echipa de profesori de specialitate dedicați educației și formării elevilor.',
        image: {
          src: '~/assets/images/cards/scoala-gimnaziala/echipa-noastra.jpg',
          alt: 'Echipa noastră',
        },
        callToAction: {
          text: 'Cunoașteți echipa',
          href: '/scoala-gimnaziala/echipa-noastra',
        },
      },
      {
        title: 'Galerie foto',
        description: 'Momente speciale din viața școlii - proiecte, competiții, evenimente și realizările elevilor.',
        image: {
          src: '~/assets/images/cards/scoala-gimnaziala/galerie-foto.jpg',
          alt: 'Galerie foto',
        },
        callToAction: {
          text: 'Vedeți galeria',
          href: '/scoala-gimnaziala/galerie-foto',
        },
      },
      {
        title: 'Înscrieri',
        description: 'Informații despre procesul de înscriere, locuri disponibile, documente necesare și etape.',
        image: {
          src: '~/assets/images/cards/scoala-gimnaziala/inscrieri.jpg',
          alt: 'Înscrieri',
        },
        callToAction: {
          text: 'Informații înscrieri',
          href: '/scoala-gimnaziala/inscrieri',
        },
      },
      {
        title: 'Informații utile (Q&A)',
        description: 'Răspunsuri la întrebările frecvente despre școala gimnazială, program, activități și servicii.',
        image: {
          src: '~/assets/images/cards/scoala-gimnaziala/informatii-utile.jpg',
          alt: 'Informații utile',
        },
        callToAction: {
          text: 'Vedeți întrebări frecvente',
          href: '/scoala-gimnaziala/informatii-utile',
        },
      },
    ]}
  />
</Layout>
