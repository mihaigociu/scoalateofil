---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ExpandableCards from '~/components/widgets/ExpandableCards.astro';

const metadata = {
  title: 'Metoda pedagogică - Școala Gimnazială Teofil',
  description:
    'Metoda pedagogică aplicată în Școala Gimnazială Teofil - principii, abordare și pregătire pentru viitor.',
};
---

<Layout metadata={metadata}>
  <HeroText
    tagline="Școala Gimnazială"
    title="Metoda pedagogică"
    subtitle="Educație modernă care pregătește elevii pentru succes"
  />

  <ExpandableCards
    cards={[
      {
        title: 'Abordarea noastră educațională',
        image: {
          src: '~/assets/images/metoda-gimnaziala-1.jpg',
          alt: 'Metoda pedagogică gimnaziu',
        },
        summary:
          'Combinăm rigoarea academică cu dezvoltarea competențelor de viață, pregătind elevii pentru liceul de top și pentru provocările vieții moderne.',
        content: `
          <p class="mb-4">
            În Școala Gimnazială Teofil, educația vizează formarea unor tineri capabili să gândească critic, să comunice eficient și să fie responsabili față de ei înșiși și față de societate.
          </p>
          
          <h4 class="text-xl font-bold mb-3">Principii fundamentale</h4>
          <ul class="list-disc list-inside mb-4 space-y-2">
            <li>Excelență academică și pregătire solidă</li>
            <li>Dezvoltarea gândirii critice și analitice</li>
            <li>Învățare activă prin proiecte și cercetare</li>
            <li>Educație personalizată și mentoring</li>
            <li>Pregătire pentru examene și competiții</li>
            <li>Dezvoltarea competențelor digitale</li>
          </ul>
          
          <h4 class="text-xl font-bold mb-3">Focus pe rezultate</h4>
          <p class="mb-4">
            Ne concentrăm pe pregătirea elevilor pentru admiterea la liceele de top și pentru performanță în competiții școlare.
          </p>
        `,
      },
      {
        title: 'Curriculum și discipline',
        image: {
          src: '~/assets/images/curriculum-gimnaziu.jpg',
          alt: 'Curriculum gimnazial',
        },
        summary:
          'Program complet conform planului de învățământ național, îmbogățit cu ore suplimentare la discipline fundamentale.',
        content: `
          <h4 class="text-xl font-bold mb-3">Discipline obligatorii</h4>
          <ul class="list-disc list-inside mb-4 space-y-2">
            <li>Limba și literatura română</li>
            <li>Matematică</li>
            <li>Limbi străine (engleză, opțional a doua limbă)</li>
            <li>Științe (fizică, chimie, biologie)</li>
            <li>Istorie și geografie</li>
            <li>Educație civică</li>
            <li>TIC și educație digitală</li>
            <li>Arte, muzică și educație fizică</li>
          </ul>
          
          <h4 class="text-xl font-bold mb-3">Ore suplimentare</h4>
          <p class="mb-4">
            Oferim ore suplimentare la matematică, limba română și limbi străine pentru consolidarea cunoștințelor și pregătirea pentru examene.
          </p>
          
          <h4 class="text-xl font-bold mb-3">Pregătire pentru evaluări</h4>
          <p class="mb-4">
            Program special de pregătire pentru Evaluarea Națională, simulări și teste periodice pentru monitorizarea progresului.
          </p>
        `,
      },
      {
        title: 'Metode și tehnologii moderne',
        image: {
          src: '~/assets/images/tehnologii-moderne.jpg',
          alt: 'Metode moderne de predare',
        },
        summary: 'Folosim metode interactive și tehnologii moderne pentru a face învățarea captivantă și relevantă.',
        content: `
          <h4 class="text-xl font-bold mb-3">Metode de predare</h4>
          <ul class="list-disc list-inside mb-4 space-y-2">
            <li>Învățare bazată pe proiecte</li>
            <li>Rezolvare de probleme și studii de caz</li>
            <li>Dezbateri și prezentări</li>
            <li>Experimentare și cercetare</li>
            <li>Lucru în echipă și colaborare</li>
          </ul>
          
          <h4 class="text-xl font-bold mb-3">Tehnologie educațională</h4>
          <p class="mb-4">
            Utilizăm platforme digitale, resurse online interactive, laboratoare virtuale și aplicații educaționale pentru a îmbogăți experiența de învățare.
          </p>
          
          <h4 class="text-xl font-bold mb-3">Evaluare continuă</h4>
          <p class="mb-4">
            Sistem de evaluare diversificat: teste periodice, proiecte, prezentări, portofolii și feedback continuu pentru îmbunătățire.
          </p>
        `,
      },
      {
        title: 'Dezvoltare personală și competiții',
        image: {
          src: '~/assets/images/dezvoltare-gimnaziu.jpg',
          alt: 'Dezvoltare personală și competiții',
        },
        summary: 'Sprijinim dezvoltarea completă a elevilor și îi pregătim pentru competiții școlare și olimpiade.',
        content: `
          <h4 class="text-xl font-bold mb-3">Competențe pentru viitor</h4>
          <ul class="list-disc list-inside mb-4 space-y-2">
            <li>Gândire critică și rezolvare de probleme</li>
            <li>Creativitate și inovație</li>
            <li>Comunicare și leadership</li>
            <li>Colaborare și lucru în echipă</li>
            <li>Auto-management și organizare</li>
            <li>Alfabetizare digitală și media</li>
          </ul>
          
          <h4 class="text-xl font-bold mb-3">Competiții și olimpiade</h4>
          <p class="mb-4">
            Pregătim și susținem elevii pentru participarea la olimpiade școlare, concursuri academice și competiții internaționale.
          </p>
          
          <h4 class="text-xl font-bold mb-3">Consiliere și orientare</h4>
          <p class="mb-4">
            Oferim consiliere pentru alegerea liceului, orientare în carieră și suport în dezvoltarea personală a fiecărui elev.
          </p>
        `,
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </ExpandableCards>
</Layout>
