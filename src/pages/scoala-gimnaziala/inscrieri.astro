---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ExpandableCards from '~/components/widgets/ExpandableCards.astro';

const metadata = {
  title: 'Înscrieri - Școala Gimnazială Teofil',
  description: 'Informații despre înscrierile la Școala Gimnazială Teofil - procedură, documente, calendar.',
};
---

<Layout metadata={metadata}>
  <HeroText
    tagline="Școala Gimnazială"
    title="Înscrieri"
    subtitle="Informații despre procesul de înscriere la Școala Gimnazială Teofil"
  />

  <ExpandableCards
    cards={[
      {
        title: 'Înscriere la Școala Gimnazială',
        image: {
          src: '~/assets/images/inscriere-gimnaziu.jpg',
          alt: 'Înscriere la Școala Gimnazială',
        },
        summary: 'Pentru informații despre înscriere și disponibilitatea locurilor, vă rugăm să ne contactați.',
        content: `
          <p class="mb-4">
            Școala Gimnazială Teofil oferă educație pentru clasele V-VIII.
          </p>
          
          <p class="mb-4">
            Pentru informații detaliate despre procesul de înscriere, disponibilitatea locurilor și toate detaliile necesare, vă rugăm să <strong>contactați școala</strong> direct.
          </p>
          
          <h4 class="text-xl font-bold mb-3">Cum ne puteți contacta</h4>
          <ul class="list-disc list-inside mb-4 space-y-2">
            <li>Telefon: 0723 537 819</li>
            <li>Email: scoalateofil@gmail.com</li>
            <li>Programare vizită la sediul școlii</li>
          </ul>
          
          <p class="mb-4">
            Echipa noastră vă va oferi toate informațiile necesare și vă va ghida prin procesul de înscriere.
          </p>
        `,
      },
      {
        title: 'Taxe și calendar de înscriere',
        image: {
          src: '~/assets/images/documente.jpg',
          alt: 'Taxe și calendar de înscriere',
        },
        summary: 'Înscrierea se poate realiza tot timpul în limita locurilor disponibile.',
        content: `
          <p class="mb-4">
            Înscrierea se poate realiza <strong>tot timpul</strong> în limita locurilor disponibile.
          </p>
          
          <h4 class="text-xl font-bold mb-3">Taxe pentru anul școlar 2025-2026</h4>
          <p class="mb-4">
            Pentru informații detaliate despre taxele de școlarizare, vă rugăm să ne contactați direct la telefon sau prin email.
          </p>
          
          <p class="mb-4">
            <strong>Contact:</strong> 0723 537 819 sau scoalateofil@gmail.com
          </p>
        `,
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </ExpandableCards>
</Layout>
