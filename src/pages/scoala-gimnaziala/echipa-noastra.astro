---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import TeamMember from '~/components/widgets/TeamMember.astro';

// Import team member data
import { rominaSopoian, laviniaSabou, iraidaMarginean, doinaCostin, oanaBaila } from '~/data/team';

// Import all team images
import rominaSopoianImg from '~/assets/images/echipa/romina-sopoian.jpg';
import laviniaSabouImg from '~/assets/images/echipa/lavinia-sabou.jpg';
import iraidaMargineanImg from '~/assets/images/echipa/iraida-marginean.jpg';
import doinaCostinImg from '~/assets/images/echipa/doina-costin.jpg';
import oanaBailaImg from '~/assets/images/echipa/oana-baila.jpg';

const metadata = {
  title: 'Echipa noastră - Școala Gimnazială Teofil',
  description: 'Cunoașteți echipa de profesori de specialitate din Școala Gimnazială Teofil.',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText
    tagline="Școala Gimnazială"
    title="Echipa noastră"
    subtitle="Profesori de specialitate dedicați și experimentați"
  />

  <!-- Team Grid Section -->
  <section class="px-4 py-16 sm:px-6 mx-auto lg:px-8 lg:py-20 max-w-7xl">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <!-- Team Member 1: Romina Sopoian -->
      <TeamMember
        id={rominaSopoian.id}
        title={rominaSopoian.title}
        tagline={rominaSopoian.tagline}
        image={rominaSopoianImg}
      >
        <Fragment set:html={rominaSopoian.content} />
      </TeamMember>

      <!-- Team Member 2: Lavinia Sabou -->
      <TeamMember
        id={laviniaSabou.id}
        title={laviniaSabou.title}
        tagline={laviniaSabou.tagline}
        image={laviniaSabouImg}
      >
        <Fragment set:html={laviniaSabou.content} />
      </TeamMember>

      <!-- Team Member 3: Iraida Mărginean -->
      <TeamMember
        id={iraidaMarginean.id}
        title={iraidaMarginean.title}
        tagline={iraidaMarginean.tagline}
        image={iraidaMargineanImg}
      >
        <Fragment set:html={iraidaMarginean.content} />
      </TeamMember>

      <!-- Team Member 4: Doina Costin -->
      <TeamMember id={doinaCostin.id} title={doinaCostin.title} tagline={doinaCostin.tagline} image={doinaCostinImg}>
        <Fragment set:html={doinaCostin.content} />
      </TeamMember>

      <!-- Team Member 5: Oana Raluca Băilă -->
      <TeamMember id={oanaBaila.id} title={oanaBaila.title} tagline={oanaBaila.tagline} image={oanaBailaImg}>
        <Fragment set:html={oanaBaila.content} />
      </TeamMember>
    </div>
  </section>
</Layout>
