---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import TeamMember from '~/components/widgets/TeamMember.astro';

// Import team member data
import { bogdanHerteg, elizaPurcaru, tatianaOnilov, rominaSopoian, laviniaSabou } from '~/data/team';

// Import all team images
import bogdanHertegImg from '~/assets/images/echipa/bogdan-herteg.jpg';
import elizaPurcaruImg from '~/assets/images/echipa/eliza-purcaru.jpg';
import tatianaOnilovImg from '~/assets/images/echipa/tatiana-onilov.jpg';
import rominaSopoianImg from '~/assets/images/echipa/romina-sopoian.jpg';
import laviniaSabouImg from '~/assets/images/echipa/lavinia-sabou.jpg';

const metadata = {
  title: 'Echipa noastră - Școala Gimnazială Teofil',
  description: 'Cunoașteți echipa de profesori de specialitate din Școala Gimnazială Teofil.',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText
    tagline="Școala Gimnazială"
    title="Echipa noastră"
    subtitle="Profesori de specialitate dedicați și experimentați"
  />

  <!-- Team Grid Section -->
  <section class="px-4 py-16 sm:px-6 mx-auto lg:px-8 lg:py-20 max-w-7xl">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <!-- Team Member 1: Bogdan Herțeg -->
      <TeamMember
        id={bogdanHerteg.id}
        title={bogdanHerteg.title}
        tagline={bogdanHerteg.tagline}
        image={bogdanHertegImg}
      >
        <Fragment set:html={bogdanHerteg.content} />
      </TeamMember>

      <!-- Team Member 2: Eliza Purcaru -->
      <TeamMember
        id={elizaPurcaru.id}
        title={elizaPurcaru.title}
        tagline={elizaPurcaru.tagline}
        image={elizaPurcaruImg}
      >
        <Fragment set:html={elizaPurcaru.content} />
      </TeamMember>

      <!-- Team Member 3: Tatiana Onilov -->
      <TeamMember
        id={tatianaOnilov.id}
        title={tatianaOnilov.title}
        tagline={tatianaOnilov.tagline}
        image={tatianaOnilovImg}
      >
        <Fragment set:html={tatianaOnilov.content} />
      </TeamMember>

      <!-- Team Member 4: Romina Sopoian -->
      <TeamMember
        id={rominaSopoian.id}
        title={rominaSopoian.title}
        tagline={rominaSopoian.tagline}
        image={rominaSopoianImg}
      >
        <Fragment set:html={rominaSopoian.content} />
      </TeamMember>

      <!-- Team Member 5: Lavinia Sabou -->
      <TeamMember
        id={laviniaSabou.id}
        title={laviniaSabou.title}
        tagline={laviniaSabou.tagline}
        image={laviniaSabouImg}
      >
        <Fragment set:html={laviniaSabou.content} />
      </TeamMember>
    </div>
  </section>
</Layout>
