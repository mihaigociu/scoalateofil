---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact - Școala Teofil',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contact" title="Vă așteptăm!" />

  <ContactUs
    id="form"
    title="Trimiteți-ne un mesaj!"
    subtitle="Pentru răspunsuri rapide, consultați secțiunea noastră de Întrebări Frecvente. Este posibil să găsiți acolo răspunsul pe care îl căutați! Dacă nu, echipa noastră este bucuroasă să vă ajute."
    inputs={[
      {
        type: 'text',
        name: 'nume',
        label: 'Nume *',
        placeholder: 'Nume complet',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email *',
        placeholder: 'exemplu@email.com',
      },
      {
        type: 'tel',
        name: 'telefon',
        label: 'Telefon *',
        placeholder: '0723 XXX XXX',
      },
    ]}
    textarea={{
      label: 'Mesaj *',
      name: 'mesaj',
      rows: 5,
      placeholder: 'Scrie-ți mesajul aici...',
    }}
    disclaimer={{
      label:
        'Prin trimiterea acestui formular de contact, confirmați că sunteți de acord cu colectarea informațiilor dumneavoastră personale.',
    }}
    description="Echipa noastră răspunde de obicei în termen de 24 de ore lucrătoare."
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Suntem aici să vă ajutăm!"
    items={[
      {
        title: 'Informații generale',
        description:
          'Contactați-ne pentru întrebări legate de înscrieri, programul școlii, activitățile educaționale sau orice alte informații despre Școala Teofil.',
      },
      {
        title: 'Relații cu părinții',
        description:
          'Discutați cu noi despre implicarea părinților, întâlniri tematice, evenimente școlare sau orice aspect legat de parteneriatul școală-familie.',
      },
      {
        title: 'Admitere',
        description:
          'Contactați-ne pentru detalii despre procesul de înscriere, locuri disponibile, documente necesare sau pentru a programa o vizită la școală.',
      },
      {
        title: 'Telefon',
        description: '0723 537 819',
        icon: 'tabler:headset',
      },
      {
        title: 'Email',
        description: 'scoalateofil@gmail.com',
        icon: 'tabler:mail',
      },
      {
        title: 'Locație',
        description:
          'Grădinița Teofil: str. Mărgăului nr. 2, Cluj-Napoca, cod poștal 400633 | Școala Teofil: Aleea Moldoveanu 3, Cluj-Napoca',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
