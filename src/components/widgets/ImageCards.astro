---
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import Headline from '~/components/ui/Headline.astro';
import Image from '~/components/common/Image.astro';

interface Card {
  title: string;
  description: string;
  image: {
    src: string;
    alt: string;
  };
  callToAction?: {
    text: string;
    href: string;
  };
}

interface Props {
  title?: string;
  subtitle?: string;
  tagline?: string;
  cards?: Card[];
  columns?: number;
  id?: string;
  isDark?: boolean;
  classes?: Record<string, string>;
  bg?: string;
}

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline = await Astro.slots.render('tagline'),
  cards = [],
  columns = 3,
  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;

const gridClass =
  columns === 4
    ? 'lg:grid-cols-4 md:grid-cols-3 sm:grid-cols-2'
    : columns === 3
      ? 'lg:grid-cols-3 sm:grid-cols-2'
      : columns === 2
        ? 'sm:grid-cols-2'
        : '';
---

<WidgetWrapper id={id} isDark={isDark} containerClass={`max-w-7xl mx-auto ${classes?.container ?? ''}`} bg={bg}>
  <Headline
    title={title}
    subtitle={subtitle}
    tagline={tagline}
    classes={(classes?.headline || {}) as Record<string, string>}
  />

  <div class={`grid grid-cols-1 ${gridClass} gap-6 mt-8`}>
    {
      cards.map((card) => (
        <a
          href={card.callToAction?.href}
          class="image-card group rounded-lg shadow-lg overflow-hidden transition-all duration-300 hover:shadow-xl hover:-translate-y-1 block"
        >
          <div class="relative card-container h-80">
            <Image
              src={card.image.src}
              alt={card.image.alt}
              class="w-full h-full object-cover card-image absolute inset-0"
              widths={[400, 768]}
              sizes="(max-width: 768px) 100vw, 400px"
              loading="lazy"
            />

            {/* Overlay gradient for better text readability */}
            <div class="absolute inset-0 bg-gradient-to-b from-black/30 via-black/50 to-black/70 group-hover:from-black/40 group-hover:via-black/60 group-hover:to-black/80 transition-all duration-300" />

            <div class="relative p-6 flex flex-col justify-end h-full text-white">
              <h3 class="text-2xl font-bold mb-3 drop-shadow-lg">{card.title}</h3>
              <p class="mb-4 drop-shadow-md text-sm">{card.description}</p>
              {card.callToAction && (
                <span class="inline-flex items-center gap-2 text-white font-semibold group-hover:gap-3 transition-all duration-200">
                  {card.callToAction.text}
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </span>
              )}
            </div>
          </div>
        </a>
      ))
    }
  </div>
</WidgetWrapper>

<style>
  .image-card {
    position: relative;
  }

  .card-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .image-card:hover .card-image {
    transform: scale(1.05);
    transition: transform 0.3s ease-in-out;
  }
</style>
